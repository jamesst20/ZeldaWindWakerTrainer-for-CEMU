                            <ComboBoxItem Tag="1">Bow: Normal</ComboBoxItem>
                            <ComboBoxItem Tag="3">Bow: Ice and Fire</ComboBoxItem>
                            <ComboBoxItem Tag="7">Bow: Ice, Fire and Light</ComboBoxItem>
