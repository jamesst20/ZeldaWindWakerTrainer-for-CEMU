                        <CheckBox Content="Deku Leaf" x:Name="CheckBoxUnlockDekuLeaf" Tag="DekuLeaf" />
                        <CheckBox Content="Tingle Bottle" x:Name="CheckBoxUnlockTingleBottle" Tag="TingleBottle"/>
                        <CheckBox Content="Picto Box" x:Name="CheckBoxUnlockPictoBox" Tag="PictoBox"/>
