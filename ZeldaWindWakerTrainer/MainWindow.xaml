<Window x:Class="ZeldaWindWakerTrainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZeldaWindWakerTrainer"
        mc:Ignorable="d"        
        Title="Zelda WindWaker Trainer - Jamesst20" Height="450" Width="950" ResizeMode="CanMinimize"
        Closing="Window_Closing">
    <Grid>
        <TabControl SelectedIndex="0">
            <TabItem Header="General" Height="22" Margin="-2,-2,-2,0" VerticalAlignment="Top" Width="70">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <GroupBox Header="Player" Grid.Column="0" Grid.Row="0">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" Margin="0 5">
                                <Label Content="Max health in quarters (12-80) :" Padding="0" Margin="5 1 5 0"/>
                                <Label x:Name="LblMaxHealth" Content="0" Padding="0" Margin="0 1 20 0" />
                                <TextBox x:Name="TxtMaxHealth" Width="50" Margin="0 0 5 0"/>
                                <Button x:Name="BtUpdateMaxHealth" Content="Update" Width="60" Click="BtUpdateMaxHealth_Click" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 5">
                                <Label Content="Health (0-80) :" Padding="0" Margin="5 1 5 0"/>
                                <Label x:Name="LblHealth" Content="0" Padding="0" Margin="0 1 20 0" />
                                <TextBox x:Name="TxtHealth" Width="50" Margin="0 0 5 0"/>
                                <Button x:Name="BtUpdateHealth" Content="Update" Width="60" Click="BtUpdateHealth_Click" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 5">
                                <Label Content="Max stamina unlocked (0/16/32) ?"/>
                                <CheckBox x:Name="CheckboxMaxStamina" IsThreeState="True" Margin="0 6 0 0" Click="CheckboxMaxStamina_Click" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 5">
                                <Label Content="Stamina (0-32) :" Padding="0" Margin="5 1 5 0"/>
                                <Label x:Name="LblStamina" Content="0" Padding="0" Margin="0 1 20 0" />
                                <TextBox x:Name="TxtStamina" Width="50" Margin="0 0 5 0"/>
                                <Button x:Name="BtUpdateStamina" Content="Update" Width="60" Click="BtUpdateStamina_Click" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 5">
                                <Label Content="Max rupee: " Grid.Column="0"/>
                                <ComboBox x:Name="ComboMaxRupee" Width="150" SelectedValuePath="Content" SelectionChanged="ComboMaxRupee_SelectionChanged">
                                    <ComboBoxItem Tag="100">100</ComboBoxItem>
                                    <ComboBoxItem Tag="1000">1000</ComboBoxItem>
                                    <ComboBoxItem Tag="5000">5000</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 5">
                                <Label Content="Current rupee: " Padding="0" Margin="5 1 5 0"/>
                                <Label x:Name="LblRupee" Content="0" Padding="0" Margin="0 1 20 0"/>
                                <TextBox x:Name="TxtRupee" Width="100" Text="0"/>
                                <Button x:Name="BtUpdateRupee" Content="Update" Width="60" Margin="5 0 0 0" Click="BtUpdateRupee_Click" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 5">
                                <Label Content="Beedle Points :" Padding="0" Margin="5 1 5 0"/>
                                <Label x:Name="LblBeedlePoints" Content="0" Padding="0" Margin="0 1 20 0" />
                                <TextBox x:Name="TxtBeedlePoints" Width="50" Margin="0 0 5 0"/>
                                <Button x:Name="BtUpdateBeedlePoints" Content="Update" Width="60" Click="BtUpdateBeedlePoints_Click" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Story" Grid.Column="1" Grid.Row="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <CheckBox Content="Power Bracelets" x:Name="CheckBoxPowerBracelets" Grid.Row="0" Margin="5 0 0 0" Click="CheckBoxPowerBracelets_Click"/>
                            <StackPanel Orientation="Horizontal" Grid.Row="1">
                                <Label Content="Pearls :"/>
                                <CheckBox x:Name="CheckboxPearlDin" Content="Din" IsChecked="False" Margin="0 6 6 0" Click="CheckboxPearls_Click" />
                                <CheckBox x:Name="CheckboxPearlNayru" Content="Nayru" IsChecked="False" Margin="0 6 6 0" Click="CheckboxPearls_Click" />
                                <CheckBox x:Name="CheckboxPearlFarore" Content="Farore" IsChecked="False" Margin="0 6 0 0" Click="CheckboxPearls_Click" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Grid.Row="2">
                                <Label Content="Triforce fragments :" />
                                <WrapPanel Orientation="Horizontal" Width="350">
                                    <CheckBox x:Name="CheckboxTriforce1" Content="#1" IsChecked="False" Margin="0 6 6 0" Click="CheckboxTriforce_Click" />
                                    <CheckBox x:Name="CheckboxTriforce2" Content="#2" IsChecked="False" Margin="0 6 6 0" Click="CheckboxTriforce_Click" />
                                    <CheckBox x:Name="CheckboxTriforce3" Content="#3" IsChecked="False" Margin="0 6 6 0" Click="CheckboxTriforce_Click" />
                                    <CheckBox x:Name="CheckboxTriforce4" Content="#4" IsChecked="False" Margin="0 6 6 0" Click="CheckboxTriforce_Click" />
                                    <CheckBox x:Name="CheckboxTriforce5" Content="#5" IsChecked="False" Margin="0 6 6 0" Click="CheckboxTriforce_Click" />
                                    <CheckBox x:Name="CheckboxTriforce6" Content="#6" IsChecked="False" Margin="0 6 6 0" Click="CheckboxTriforce_Click" />
                                    <CheckBox x:Name="CheckboxTriforce7" Content="#7" IsChecked="False" Margin="0 6 6 0" Click="CheckboxTriforce_Click" />
                                    <CheckBox x:Name="CheckboxTriforce8" Content="#8" IsChecked="False" Margin="0 6 6 0" Click="CheckboxTriforce_Click" />
                                </WrapPanel>
                            </StackPanel>
                            <TextBlock TextWrapping="WrapWithOverflow" Grid.Row="3" Foreground="Red" Margin="0 20">
                                Sometimes the UI doesn't reflect the changes. When this happens, save, go back to main menu and reload your game. The changes should be displayed.
                            </TextBlock>

                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>


