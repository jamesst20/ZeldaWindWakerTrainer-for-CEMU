                        <CheckBox Content="Bait Bag" x:Name="CheckBoxUnlockBaitBag" Tag="BaitBag"/>
                        <ComboBox x:Name="ComboBoxUnlockBow" SelectedIndex="0" SelectedValuePath="Tag" Margin="0 1 0 1" Width="200" HorizontalAlignment="Left" SelectionChanged="ComboBoxUnlockBow_SelectionChanged">
